{% extends "base.jinja" %}

{% block title %}{{ error_code|default('Error') }} {{ error_title|default('Error') }} â€“ GitResume{% endblock %}

{% block body_class %}min-h-screen flex flex-col{% endblock %}

{% block content %}
    <main class="flex-grow flex items-center justify-center">
        <div class="bg-{{ bg_color|default('[#FEE2E2]') }} border-4 border-{{ border_color|default('[#DC2626]') }} rounded-xl p-8 shadow-lg text-center max-w-lg">
            <h1 class="{% if error_code and error_code|length > 3 %}text-4xl{% else %}text-5xl{% endif %} font-bold text-{{ text_color|default('[#DC2626]') }} mb-4">{{ error_code|default('Error') }}</h1>
            <h2 class="text-2xl font-semibold text-gray-900 mb-2">{{ error_title|default('An error occurred') }}</h2>
            <p class="text-gray-700 mb-6">{{ error_message|default('Sorry, something went wrong.')|safe }}</p>
            <a href="/"
               class="inline-block px-4 py-2 bg-[#059669] border-2 border-gray-900 text-gray-900 rounded font-medium hover:-translate-y-px hover:-translate-x-px transition-transform focus:outline-none focus:ring-2 focus:ring-[#059669] focus:ring-offset-2">Back
                to Home</a>
        </div>
    </main>
{% endblock %}
