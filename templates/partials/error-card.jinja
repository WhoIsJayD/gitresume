<div id="error-container" class="relative mb-8 fade-in" style="display:none;">
    <div class="bg-[#FEF2F2] border-2 border-[#FCA5A5] rounded-xl p-5 sm:p-6 shadow-lg flex flex-col items-center space-y-4 max-w-xl mx-auto text-center">

        <!-- Icon -->
        <svg class="w-12 h-12 text-[#DC2626] mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 9v2m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>

        <!-- Title -->
        <h2 class="text-2xl font-bold text-[#DC2626]">Something went wrong</h2>

        <!-- Message -->
        <p id="error-message" class="text-[#7F1D1D] font-medium text-sm sm:text-base leading-relaxed px-2"></p>

        <!-- Button -->
        <button
                onclick="window.location.href = window.location.pathname;"
                class="px-5 py-2 bg-[#059669] text-white border-2 border-gray-900 rounded-lg font-semibold hover:-translate-y-0.5 hover:-translate-x-0.5 hover:shadow-md transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-[#059669] focus:ring-offset-2"
        >
            Try Again
        </button>
    </div>
</div>

<script>
    // Auto-reload after 4 seconds if the error container is shown
    const errorContainer = document.getElementById('error-container');

    if (errorContainer) {
        const observer = new MutationObserver(() => {
            if (errorContainer.style.display !== 'none') {
                setTimeout(() => {
                    window.location.href = window.location.pathname; // Reload same page via GET
                }, 60000);
            }
        });

        observer.observe(errorContainer, {attributes: true, attributeFilter: ['style']});
    }
</script>
