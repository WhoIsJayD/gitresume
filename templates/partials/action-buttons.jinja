<div class="flex justify-end gap-3 flex-wrap">
    <button
            onclick="regenerateResume()"
            class="px-4 py-2 bg-[#059669] border-retro text-gray-900 rounded-md button-hover flex items-center gap-1 text-sm font-semibold hover:text-white focus:ring-2 focus:ring-[#059669] focus:outline-none"
    >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 4v5h5m-5 0a7 7 0 1110 0m-7 7v5h5m-5 0a7 7 0 1110 0"/>
        </svg>
        Regenerate
    </button>
    <button
            onclick="copyLatex()"
            class="px-4 py-2 bg-[#059669] border-retro text-gray-900 rounded-md button-hover flex items-center gap-1 text-sm font-semibold hover:text-white focus:ring-2 focus:ring-[#059669] focus:outline-none"
    >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
        </svg>
        Copy LaTeX
    </button>
    <button
            onclick="copyText()"
            class="px-4 py-2 bg-[#059669] border-retro text-gray-900 rounded-md button-hover flex items-center gap-1 text-sm font-semibold hover:text-white focus:ring-2 focus:ring-[#059669] focus:outline-none"
    >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
        </svg>
        Copy Text
    </button>
    {% if result.interview_questions and result.interview_questions|length > 0 %}
        <button
                onclick="toggleInterviewQuestions()"
                id="interview-questions-btn"
                class="px-4 py-2 bg-[#059669] border-retro text-gray-900 rounded-md button-hover flex items-center gap-1 text-sm font-semibold hover:text-white focus:ring-2 focus:ring-[#059669] focus:outline-none"
        >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Interview Questions
        </button>
    {% endif %}
</div>
